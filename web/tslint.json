{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**",
      "*.json",
      "**/*.json"
    ]
  },
  "rules": {
    "quotemark": [true, "single"],
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "ordered-imports": true,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": true,
    "no-console": false,
    "experimentalDecorators": true
  }
}
