				{
					"listen": "test",
					"script": {
						"id": "c0639199-6f4c-4a7a-a94b-5eb8ebb2caca",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Content-Type is json\", function () {",
							"    pm.response.to.have.header(\"Content-Type\");",
							"    pm.expect(pm.response.headers.get(\"Content-Type\")).to.include(\"application/json\");",
							"});",
							"",
							"pm.test(\"Replies have array of endpoints\", function() {",
							"    let jsonData = pm.response.json();",
							"    pm.expect(jsonData.endpoints);",
							"    // Expect endpoints to be at least CRUD (length 4)",
							"    pm.expect(jsonData.endpoints.length).to.be.above(4);",
							"});",
							""
						],
						"type": "text/javascript"
					}
				}
			],
